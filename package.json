{
  "name": "bitty",
  "version": "1.0.0",
  "description": "Quick Bitwarden vault search from your menu bar",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac",
    "test": "vitest run"
  },
  "build": {
    "appId": "com.bitty.app",
    "productName": "Bitty",
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ]
  },
  "keywords": [
    "bitwarden",
    "menu-bar",
    "password-manager",
    "macos",
    "electron"
  ],
  "author": "Serff Webdevelopment",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "auto-launch": "^5.0.6"
  }
}